{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Contribution to growth of output per hour worked and relative industry size",
    "subtitle": "growth from 2024Q2 to 2023Q2 (in %)",
    "color": "#122b39E6",
    "anchor": "start",
    "dx": 24,
    "fontSize": 14,
    "subtitleFontSize": 12,
    "subtitlePadding": 4,
    "offset": 10
  },
  "width": 450,
  "height": 300,
  "config": {
    "font": "Times New Roman",
    "mark": {"line": {"interpolate": "linear"}},
    "view": {"stroke": "transparent", "width": 400, "height": 300},
    "range": {
      "category": [
        "#001f3f",
        "#4269d0",
        "#efb118",
        "#ff725c",
        "#6cc5b0",
        "#3ca951",
        "#ff8ab7",
        "#a463f2",
        "#97bbf5",
        "#9c6b4e"
      ],
      "diverging": ["#E6224B", "#E54753", "#C9C9C9", "#179FDB", "#122B39"],
      "heatmap": ["#C9C9C9", "#179FDB", "#0063AF", "#122B39"],
      "ordinal": ["#00A767", "#36B7B4", "#179FDB", "#0063AF", "#243B5A"]
    },
    "axisX": {
      "labelColor": "#122b39",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "domainOpacity": 0.5,
      "gridOpacity": 0,
      "labelFont": "Times New Roman",
      "labelAngle": 0,
      "labelAlign": {"expr": "'center'"},
      "labelFontSize": 11,
      "labelPadding": 5,
      "tickCount": 10,
      "tickSize": 0,
      "title": "",
      "labelExpr": "datum.value+'%'"
    },
    "axisY": {
      "labelColor": "#122b39",
      "labelFont": "Times New Roman",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "gridColor": "#122b39",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "labelPadding": 5,
      "labelFontSize": 11,
      "domainOpacity": 0.5,
      "tickSize": 0,
      "titleAlign": "left",
      "titleAngle": 0,
      "titleBaseline": "bottom",
      "titleColor": "#122b39",
      "titleOpacity": 0.9,
      "titleX": 0,
      "titleY": -7
    }
  },
  "layer": [
    {
      "mark": {"type": "bar"},
      "encoding": {
        "y": {"field": "Industry", "type": "nominal", "sort": "-x", "title": ""},
        "x": {"field": "Contribution", "type": "quantitative", "title": ""},
        "color": {
          "condition": [
            {"test": "datum['Industry'] === 'Finance and Insurance'", "value": "#9A2760"}
          ],
          "value": "#93B7BE"
        }
      }
    },
    {
      "mark": {"type": "point", "filled": true},
      "encoding": {
        "y": {"field": "Industry", "type": "nominal", "sort": "-x"},
        "x": {"field": "Contribution", "type": "quantitative"},
        "size": {
          "field": "Relative size of industry",
          "type": "quantitative",
          "legend": {
            "title": "Relative size of industry",
            "labelExpr": "datum.value+'%'"
          }
        },
        "color": {"value": "#E6224B"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "text": {"expr": "datum['Contribution'] + '%'"},
        "dx": 5
      },
      "encoding": {
        "y": {"field": "Industry", "type": "nominal", "sort": "-x"},
        "x": {"field": "Contribution", "type": "quantitative"},
        "opacity": {
          "condition": {
            "test": "datum['Industry'] === 'Finance and Insurance' && datum['Contribution'] > 0",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "text": {"expr": "datum['Contribution'] + '%'"},
        "dx": -15
      },
      "encoding": {
        "y": {"field": "Industry", "type": "nominal", "sort": "-x"},
        "x": {"field": "Contribution", "type": "quantitative"},
        "opacity": {
          "condition": {
            "test": "datum['Industry'] === 'Finance and Insurance' && datum['Contribution'] < 0",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/louisflamencourt/FCAcapstone/refs/heads/main/outputphw_contr.csv",
    "format": {"type": "csv"}
  }
}
