{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Financial corporations GFCF investment - UK",
    "subtitle": ["in GBP bn (current prices)"],
    "color": "#122b39E6",
    "subtitleColor": "#676A86",
    "anchor": "start",
    "dx": 24,
    "fontSize": 14,
    "subtitleFontSize": 12,
    "subtitlePadding": 4,
    "offset": 0
  },
  "width": 450,
  "height": 300,
  "config": {
    "font": "Times New Roman",
    "mark": {"line": {"interpolate": "linear"}},
    "view": {"stroke": "transparent", "width": 400, "height": 300},
    "range": {
      "category": [
        "#9A2760",
        "#90E0EF",
        "#48CAE4",
        "#00B4D8",
        "#0096C7",
        "#0077B6",
        "#023E8A"
      ]
    },
    "axisX": {
      "labelColor": "#122b39",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "domainOpacity": 0.5,
      "gridOpacity": 0,
      "labelFont": "Times New Roman",
      "labelAngle": 0,
      "labelAlign": "center",
      "labelFontSize": 11,
      "labelPadding": 5,
      "tickCount": 10,
      "tickSize": 0,
      "title": ""
    },
    "axisY": {
      "labelColor": "#122b39",
      "labelFont": "Times New Roman",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "gridColor": "#122b39",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "labelPadding": 5,
      "labelFontSize": 11,
      "domainOpacity": 0.5,
      "tickSize": 0,
      "title": null,
      "titleAlign": "left",
      "titleAngle": 0,
      "titleBaseline": "bottom",
      "titleColor": "#122b39",
      "titleOpacity": 0.9,
      "titleX": 0,
      "titleY": -7,
      "labelExpr": "'£'+datum.value+' bn'"
    }
  },
  "layer": [
    {
      "mark": {"type": "line"},
      "encoding": {
        "x": {"field": "Year", "type": "temporal", "title": ""},
        "y": {"field": "Value", "type": "quantitative", "title": ""},
        "color": {"value": "#9A2760"}
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "text": {"expr": "'£'+format(datum.Value, '.2f') + ' bn'"},
        "baseline": "middle",
        "dx": 5
      },
      "encoding": {
        "x": {"field": "Year", "type": "temporal"},
        "y": {"field": "Value", "type": "quantitative"},
        "color": {"value": "#9A2760"},
      },
      "transform": [
        {"filter": "datum.Year == 852076800000 || datum.Year == 1546300800000 || datum.Year == 1672531200000"}
      ]
    }
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/louisflamencourt/GrowthCoLab/refs/heads/main/GFCF.csv",
    "format": {"type": "csv"}
  }
}
