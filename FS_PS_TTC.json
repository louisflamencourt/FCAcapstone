{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Total Tax Contribution of the Financial and Related Professional Services Industry, 2016-2023",
    "subtitle": ["Total tax contributions (TTC) in £bn"],
    "color": "#122b39E6",
    "subtitleColor": "#676A86",
    "anchor": "start",
    "dx": 24,
    "fontSize": 14,
    "subtitleFontSize": 12,
    "subtitlePadding": 4,
    "offset": 10
  },
  "width": 450,
  "height": 300,
  "config": {
    "font": "Times New Roman",
    "mark": {"line": {"interpolate": "linear"}},
    "view": {"stroke": "transparent", "width": 450, "height": 350},
    "range": {
      "category": [
        "#001f3f",
        "#4269d0",
        "#efb118",
        "#ff725c",
        "#6cc5b0",
        "#3ca951",
        "#ff8ab7",
        "#a463f2",
        "#97bbf5",
        "#9c6b4e"
      ]
    },
    "axisX": {
      "labelColor": "#122b39",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "domainOpacity": 0.5,
      "gridOpacity": 0,
      "labelFont": "Times New Roman",
      "labelAngle": 0,
      "labelAlign": "center",
      "labelFontSize": 11,
      "labelPadding": 5,
      "tickCount": 10,
      "tickSize": 0,
      "title": ""
    }
  },
  "data": {
    "values": [
      {
        "year": 2016,
        "Financial services TTC": 71.4,
        "Professional services TTC": 15.5,
        "FS/PS": 14.6
      },
      {
        "year": 2018,
        "Financial services TTC": 75,
        "Professional services TTC": 19.1,
        "FS/PS": 14.3
      },
      {
        "year": 2020,
        "Financial services TTC": 75.6,
        "Professional services TTC": 20.5,
        "FS/PS": 13.4
      },
      {
        "year": 2023,
        "Financial services TTC": 79.3,
        "Professional services TTC": 30.9,
        "FS/PS": 12.3
      }
    ]
  },
  "layer": [
    {
      "encoding": {
        "x": {
          "field": "year",
          "scale": {"padding": 0.1},
          "type": "ordinal",
          "title": ""
        }
      },
      "layer": [
        {
          "mark": {
            "type": "text",
            "text": {"expr": "'£'+format(datum.total, '.0f')+'bn'"},
            "dy": -6
          },
          "transform": [
            {
              "calculate": "datum['Financial services TTC'] + datum['Professional services TTC']",
              "as": "total"
            }
          ],
          "encoding": {"y": {"field": "total", "type": "quantitative"}}
        },
        {
          "transform": [
            {
              "fold": ["Financial services TTC", "Professional services TTC"],
              "as": ["category", "value"]
            }
          ],
          "layer": [
            {
              "mark": {"type": "bar", "opacity": 1},
              "encoding": {
                "y": {
                  "field": "value",
                  "type": "quantitative",
                  "title": "Total tax contributions",
                  "axis": {
                    "grid": false,
                    "orient": "left",
                    "titleColor": "black",
                    "titleAngle": 0,
                    "titleX": 0,
                    "titleY": -10,
                    "titleAnchor": "start",
                    "labelExpr": "datum.value+'%'"
                  },
                  "stack": "zero",
                  "scale": {"domain": [0, 120]}
                },
                "color": {
                  "field": "category",
                  "type": "nominal",
                  "scale": {"range": ["#9A2760", "#93B7BE"]}
                }
              }
            },
            {
              "mark": {
                "type": "text",
                "align": "center",
                "baseline": "middle",
                "dy": 20,
                "color": "white",
                "text": {"expr": "'£'+datum.value+' bn'"}
              },
              "encoding": {
                "x": {"field": "year", "type": "ordinal"},
                "y": {"field": "value", "type": "quantitative"}
              }
            }
          ]
        }
      ]
    },
    {
      "mark": {"type": "line", "color": "rgb(50, 90, 200)", "point": true},
      "encoding": {
        "x": {"field": "year", "type": "ordinal"},
        "y": {
          "field": "FS/PS",
          "type": "quantitative",
          "axis": {
            "title": "FS/PS",
            "grid": false,
            "domainColor": "rgb(50, 90, 200)",
            "labelColor": "rgb(50, 90, 200)",
            "titleColor": "rgb(50, 90, 200)",
            "labelExpr": "datum.label+'%'",
            "orient": "right"
          },
          "scale": {"domain": [10, 16]}
        }
      }
    }
  ],
  "resolve": {"scale": {"y": "independent"}}
}
