{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "GVA, hours worked, and output per hour worked growth by industry",
    "subtitle": ["growth from 2024Q2 to 2023Q2 (in %)"],
    "color": "#122b39E6",
    "anchor": "start",
    "dx": 24,
    "fontSize": 14,
    "subtitleFontSize": 12,
    "subtitlePadding": 4,
    "offset": 0
  },
  "width": 450,
  "height": 300,
  "config": {
    "font": "Times New Roman",
    "mark": {"line": {"interpolate": "linear"}},
    "view": {"stroke": "transparent", "width": 400, "height": 300},
    "range": {
      "category": [
        "#001f3f",
        "#4269d0",
        "#efb118",
        "#ff725c",
        "#6cc5b0",
        "#3ca951",
        "#ff8ab7",
        "#a463f2",
        "#97bbf5",
        "#9c6b4e"
      ]
    },
    "axisX": {
      "labelColor": "#122b39",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "domainOpacity": 0.5,
      "gridOpacity": 0,
      "labelFont": "Times New Roman",
      "labelAngle": 0,
      "labelAlign": {"expr": "'center'"},
      "labelFontSize": 11,
      "labelPadding": 5,
      "tickCount": 10,
      "tickSize": 0,
      "title": "", 
      "labelExpr": "datum.value+'%'"
    },
    "axisY": {
      "labelColor": "#122b39",
      "labelFont": "Times New Roman",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "gridColor": "#122b39",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "labelPadding": 5,
      "labelFontSize": 11,
      "domainOpacity": 0.5,
      "tickSize": 0,
      "titleAlign": "left",
      "titleAngle": 0,
      "titleBaseline": "bottom",
      "titleColor": "#122b39",
      "titleOpacity": 0.9,
      "titleX": 0,
      "titleY": -7
    }
  },
  "layer": [
    {
      "mark": {"type": "bar"},
      "encoding": {
        "y": {
          "field": "Industry",
          "type": "nominal",
          "title": "",
          "sort": {"field": "value", "order": "ascending"}
        },
        "x": {"field": "value", "type": "quantitative", "stack": "zero", "title": ""},
        "color": {"field": "variable", "type": "nominal", "scale": {"range": ["#28536B", "#93B7BE"]}}
      }
    },
    {
      "mark": {"type": "point", "filled": true, "size": 80},
      "encoding": {
        "y": {
          "field": "Industry",
          "type": "nominal",
          "title": "",
          "sort": {"field": "value", "order": "ascending"}
        },
        "x": {"field": "Output per hour worked", "type": "quantitative", "title": ""},
        "color": {"value": "#9A2760"},
        "shape": {"value": "circle"}
      }
    }
  ],
  "transform": [
    {"fold": ["GVA", "Hours worked (sign reversed)"], "as": ["variable", "value"]}
  ],
  "data": {
    "url": "https://raw.githubusercontent.com/louisflamencourt/FCAcapstone/refs/heads/main/outputphw_decomp.csv",
    "format": {"type": "csv"}
  }
}
